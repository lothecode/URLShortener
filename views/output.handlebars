<div class="card">
  <img src="url3.png" class="card-img" alt="...">
  <div class="card-img-overlay d-flex align-items-end">
    <div class="border col-12">
      {{#if success_message}}
      <div class="alert alert-primary alert-dismissible fade show mb-1" role="alert">
        {{{success_message}}}<a href="{{output}}" target="_blank"><i class="fas fa-link"></i>{{{output}}}</a>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      {{/if}}
      <form action="/output" method="POST">
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text" id="output">Shortened URL:</span>
          </div>
          <input type="text" id="copy" class="form-control" name="url" value="{{{output}}}">
          <div class="input-group-append">
            <button type="submit" class="btn btn-info copy-btn" data-clipboard-target="#copy">Copy</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>


{{!-- Clipboard.js CDN --}}
<script src="https://cdn.jsdelivr.net/npm/clipboard@2/dist/clipboard.min.js"></script>
{{!-- Clipboard script --}}
<script>
  const clipboard = new ClipboardJS('.copy-btn');
  clipboard.on('success', function (e) {
    console.info('Action:', e.action);
    console.info('Text:', e.text);
    console.info('Trigger:', e.trigger);
    e.clearSelection();
  })
  clipboard.on('error', function (e) {
    console.error('Action:', e.action);
    console.error('Trigger:', e.trigger);
    e.clearSelection();
  })
</script>